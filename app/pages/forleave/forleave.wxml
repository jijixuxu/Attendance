<view class="page">
  <view class="page__bd">
    <view class="weui-form-preview">

      <view wx:for="{{array}}">
        <view class="weui-form-preview__hd">
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">申请时间</view>
            <view class="weui-form-preview__value">{{item.thetime}}</view>
          </view>
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">申请类型</view>
            <view class="weui-form-preview__value">{{item.thetype}}</view>
          </view>
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">说明</view>
            <view class="weui-form-preview__value">{{item.memos}}</view>
          </view>
          <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">状态</view>
            <view class="weui-form-preview__value">{{item.status}}</view>
          </view>
        </view>
      </view>

    </view>

  </view>
</view>