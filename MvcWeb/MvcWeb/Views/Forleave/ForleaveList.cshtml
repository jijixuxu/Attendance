@{
    ViewBag.Title = "ForleaveList";
    Layout = "~/Views/Shared/_Home.cshtml";
}

@model System.Data.DataTable

<div class="right" id="mainFrame">

    <div class="right_cont">
        <ul class="breadcrumb">
            当前位置：
            <a href="#">首页</a>
            <span class="divider">/</span>
            请假列表
        </ul>

        <table class="table table-bordered table-striped table-hover">
            <tbody>
                <tr align="center">
                 <td nowrap="nowrap"><strong>用户账号</strong></td><td nowrap="nowrap"><strong>申请时间</strong></td><td nowrap="nowrap"><strong>起始时间</strong></td><td nowrap="nowrap"><strong>结束时间</strong></td><td nowrap="nowrap"><strong>请假种类</strong></td><td nowrap="nowrap"><strong>请假说明</strong></td><td nowrap="nowrap"><strong>状态</strong></td>
                    <td width="80" nowrap="nowrap"><strong> 操作 </strong></td>
                </tr>
                @foreach (System.Data.DataRow dr in Model.Rows)
                {
                    <tr align="center">
                        <td nowrap="nowrap">@dr["userid"] </td><td nowrap="nowrap">@dr["thetime"] </td><td nowrap="nowrap">@dr["starttime"] </td><td nowrap="nowrap">@dr["endtime"] </td><td nowrap="nowrap">@dr["thetype"] </td><td nowrap="nowrap">@dr["memos"] </td><td nowrap="nowrap">@dr["status"] </td>
                        <td nowrap="nowrap">
                            @Html.ActionLink("编辑", "ForleaveEdit", new { id = @dr["id"] })
                            @Html.ActionLink("删除", "ForleaveDelete", new { id = @dr["id"] })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
